{% extends 'base.html.twig' %}

{% block title %}Accueil - Repair Manager{% endblock %}

{% block body %}
<div class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center">
            <h2 class="text-base text-indigo-600 font-semibold tracking-wide uppercase">
                Gestion des réparations
            </h2>
            <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                Solution complète pour votre atelier
            </p>
            <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
                Suivez, gérez et optimisez vos réparations en temps réel
            </p>
        </div>

        <div class="mt-10">
            <div class="flex justify-center">
                <a href="{{ path('app_login') }}" 
                   class="px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                    Commencer maintenant
                </a>
            </div>
        </div>
    </div>
</div>

<div class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow">
                <div class="text-indigo-600 mb-4">
                    <i class="fas fa-tools text-4xl"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900">Gestion des réparations</h3>
                <p class="mt-2 text-gray-500">
                    Suivi complet des appareils en réparation avec historique des interventions
                </p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <div class="text-indigo-600 mb-4">
                    <i class="fas fa-qrcode text-4xl"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900">QR Codes & Codes-barres</h3>
                <p class="mt-2 text-gray-500">
                    Identification unique des appareils pour un suivi optimisé
                </p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <div class="text-indigo-600 mb-4">
                    <i class="fas fa-chart-line text-4xl"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900">Tableaux de bord</h3>
                <p class="mt-2 text-gray-500">
                    Statistiques et indicateurs pour piloter votre activité
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}